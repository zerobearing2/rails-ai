{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "rails-ai project settings - shared with all contributors",
  "permissions": {
    "allow": [
      "Bash(git:status)",
      "Bash(git:log:*)",
      "Bash(git:diff:*)",
      "Bash(git:show:*)",
      "Bash(git:branch:*)",
      "Bash(git:remote:*)",
      "Bash(git:ls-files:*)",
      "Bash(gh:pr list:*)",
      "Bash(gh:pr view:*)",
      "Bash(gh:issue list:*)",
      "Bash(gh:issue view:*)",
      "Bash(gh:repo view:*)",
      "Bash(bundle:exec:*)",
      "Bash(bundle:install)",
      "Bash(bundle:update:*)",
      "Bash(ruby:*)",
      "Bash(gem:list:*)",
      "Bash(rake:test:*)",
      "Bash(rake:lint:*)",
      "Bash(rubocop:*)",
      "Bash(mdl:*)",
      "Bash(bin/ci)",
      "Bash(bin/setup)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(which:*)",
      "Bash(pwd)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(npm:list:*)",
      "Bash(yarn:list:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ],
    "deny": [
      "Bash(git:push --force:*)",
      "Bash(git:reset --hard:*)",
      "Bash(git:clean -fd:*)",
      "Bash(rm:-rf:*)",
      "Bash(sudo:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)"
    ],
    "ask": [
      "Bash(git:commit:*)",
      "Bash(git:push:*)",
      "Bash(git:pull:*)",
      "Bash(git:checkout:*)",
      "Bash(git:merge:*)",
      "Bash(git:rebase:*)",
      "Bash(gh:pr create:*)",
      "Bash(gh:pr merge:*)",
      "Bash(gh:issue create:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(cp:*)"
    ]
  },
  "env": {
    "RAILS_ENV": "test",
    "RACK_ENV": "test"
  },
  "sandbox": {
    "enabled": true
  }
}
